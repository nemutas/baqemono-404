---
import CanvasContainer from '../components/CanvasContainer.astro'
import Layout from '../components/Layout.astro'
import Link from '../components/Link.astro'
---

<Layout title="Demo">
  <main>
    <CanvasContainer />
    <div class="links">
      <Link class="link" href="https://github.com/nemutas/baqemono-404" target="_blank" rel="noopener noreferrer">Github</Link>
      <Link class="emoji" href="https://googlefonts.github.io/noto-emoji-animation/" target="_blank" rel="noopener noreferrer">Animated Emoji by google</Link>
    </div>
  </main>
</Layout>

<style lang="scss">
  main {
    width: 100%;
    height: 100%;
  }
  .links {
    position: absolute;
    bottom: 1rem;
    right: 2rem;

    :global(a) {
      display: block;
      margin-left: auto;
    }
  }

  .emoji {
    font-size: 0.7rem;
    margin-top: 0.5rem;
  }
</style>
